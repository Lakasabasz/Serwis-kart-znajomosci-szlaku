<div class="d-flex flex-row">
    <span class="material-icons">arrow_right_alt</span>
    @if (_used)
    {
        <div>
            <AutoComplete/>
            <button class="material-icons" @onclick="Delete">close</button>
        </div>
    }
    else
    {
        <button class="material-icons" @onclick="Create">add</button>
    }
</div>
@code {
    private bool _used;

    private void Create()
    {
        _used = true;
        StateHasChanged();
    }

    private void Delete()
    {
        _used = false;
        StateHasChanged();
    }

}